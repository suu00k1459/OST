# Database Initialization Container
# Runs once to create TimescaleDB tables and hypertables

FROM python:3.10-slim

# Set workdir
WORKDIR /app

# Install system packages required by psycopg2
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        gcc \
        libpq-dev \
        postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# -----------------------------------------------------------
# Install Python dependencies (including psycopg2)
# -----------------------------------------------------------

# Install psycopg2 directly (recommended)
RUN pip install --no-cache-dir psycopg2-binary

# If you prefer installing from requirements.txt,
# ensure "psycopg2-binary" is in that file.
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt || true

# -----------------------------------------------------------

# Copy Python scripts and SQL schema files
COPY scripts/config_loader.py ./scripts/
COPY scripts/00_init_database.py ./scripts/
COPY sql ./sql/

# -----------------------------------------------------------
# Environment variables passed to config_loader.py
# -----------------------------------------------------------
ENV PYTHONUNBUFFERED=1
ENV DB_HOST=timescaledb
ENV DB_PORT=5432
ENV DB_NAME=flead
ENV DB_USER=flead
ENV DB_PASSWORD=password

# -----------------------------------------------------------
# Startup script: wait for DB â†’ run init â†’ exit
# -----------------------------------------------------------
RUN echo '#!/bin/bash\n\
echo "â³ Waiting for TimescaleDB..." \n\
sleep 5 \n\
echo "ğŸš€ Running database initialization..." \n\
python scripts/00_init_database.py \n\
echo "âœ“ Database init completed" \n\
' > /app/startup.sh && chmod +x /app/startup.sh

CMD ["/app/startup.sh"]
