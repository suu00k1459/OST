# Pipeline Orchestrator - Runs all Docker-based pipeline tasks
# Optimized: Inherits from base image (avoids reinstalling packages)
FROM imedbenmadi/ost-2-base:v1.0

WORKDIR /app

# Copy application code
COPY scripts/ scripts/
COPY config/ config/

# Create logs directory
RUN mkdir -p logs

# Run pipeline orchestrator
CMD ["python", "scripts/pipeline_orchestrator_docker.py"]
