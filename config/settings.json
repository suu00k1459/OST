{
    "dataset": {
        "source_url": "http://db.csail.mit.edu/labdata/data.txt",
        "num_devices": 53,
        "test_devices": 5,
        "sample_size": 1000
    },
    "training": {
        "epochs": 10,
        "batch_size": 32,
        "learning_rate": 0.001,
        "hidden_layers": [64, 32]
    },
    "aggregation": {
        "strategy": "fedavg",
        "min_devices": 3,
        "aggregation_window": 15,
        "model_registry": {
            "enabled": true,
            "max_versions_kept": 10,
            "auto_archive": true
        }
    },
    "anomaly_detection": {
        "base_threshold": 0.4,
        "adaptive_threshold": {
            "enabled": true,
            "target_anomaly_rate": 0.05,
            "min_threshold": 0.2,
            "max_threshold": 0.8,
            "adjustment_factor": 0.02,
            "adaptation_window": 100
        },
        "rcf": {
            "num_trees": 50,
            "tree_size": 256,
            "shingle_size": 4
        }
    },
    "monitoring": {
        "alerts": {
            "enabled": true,
            "accuracy_degradation_threshold": 0.05,
            "stale_device_hours": 24,
            "kafka_topic": "system-alerts"
        },
        "data_quality": {
            "enabled": true,
            "extreme_value_sigma": 10,
            "stuck_sensor_threshold": 5
        },
        "performance_history_size": 50
    },
    "timescaledb": {
        "host": "localhost",
        "port": 5432,
        "database": "iot_timescale",
        "user": "postgres",
        "password": "postgres"
    }
}
