{
  "title": "FLEAD - KPI Overview",
  "description": "High-level KPIs for system performance, model quality, device activity, latency, and forecasting reliability.",
  "tags": ["flead", "kpi", "analytics"],
  "timezone": "browser",
  "refresh": "30s",
  "time": { "from": "now-24h", "to": "now" },

  "panels": [
    {
      "id": 101,
      "title": "Global Model Accuracy (Last 24h)",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "database": "flead_db",
          "query": "SELECT AVG(model_accuracy) * 100 AS accuracy FROM model_evaluations WHERE evaluation_timestamp > NOW() - INTERVAL '24 hours';"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 75 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showThresholdLabels": true,
        "showThresholdMarkers": true,
        "orientation": "auto"
      }
    },

    {
      "id": 102,
      "title": "Average Processing Latency",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "database": "flead_db",
          "query": "SELECT metric_value FROM dashboard_metrics WHERE metric_name='average_processing_latency' ORDER BY updated_at DESC LIMIT 1;"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "min": 0,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 200 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showThresholdLabels": true,
        "showThresholdMarkers": true,
        "orientation": "auto"
      }
    },

    {
      "id": 103,
      "title": "Active Devices (Last 15 min)",
      "type": "bargauge",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "database": "flead_db",
          "query": "SELECT COUNT(DISTINCT device_id) AS devices FROM stream_analysis_results WHERE timestamp > NOW() - INTERVAL '15 minutes';"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 10 },
              { "color": "green", "value": 50 }
            ]
          }
        }
      },
      "options": {
        "displayMode": "gradient",
        "orientation": "vertical",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },

    {
      "id": 104,
      "title": "Anomalies (Last 24h)",
      "type": "bargauge",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "database": "flead_db",
          "query": "SELECT COUNT(*) AS anomalies FROM stream_analysis_results WHERE is_anomaly = TRUE AND timestamp > NOW() - INTERVAL '24 hours';"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 200 }
            ]
          }
        }
      },
      "options": {
        "displayMode": "lcd",
        "orientation": "vertical",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },

    {
      "id": 105,
      "title": "Forecast Points (Last 24h)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 6 },
      "targets": [
        {
          "refId": "A",
          "database": "flead_db",
          "query": "SELECT COUNT(*) AS fc FROM device_forecast WHERE ts > NOW() - INTERVAL '24 hours';"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 100 },
              { "color": "green", "value": 1000 }
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "textMode": "value_and_name",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },

    {
      "id": 106,
      "title": "Events Processed Per Minute",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 9, "x": 6, "y": 6 },
      "targets": [
        {
          "refId": "A",
          "database": "flead_db",
          "query": "SELECT time_bucket('1 minute', timestamp) AS bucket, COUNT(*) AS value FROM stream_analysis_results WHERE $__timeFilter(timestamp) GROUP BY bucket ORDER BY bucket;"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 30,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },

    {
      "id": 107,
      "title": "Training Jobs Per Hour",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 9, "x": 15, "y": 6 },
      "targets": [
        {
          "refId": "A",
          "database": "flead_db",
          "query": "SELECT time_bucket('1 hour', created_at) AS bucket, COUNT(*) AS jobs FROM local_models WHERE $__timeFilter(created_at) GROUP BY bucket ORDER BY bucket;"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 60,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },

    {
      "id": 108,
      "title": "Database Growth (Archive Records)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "targets": [
        {
          "refId": "A",
          "database": "flead_db",
          "query": "SELECT time_bucket('1 hour', timestamp) AS bucket, COUNT(*) AS total FROM device_raw_archive WHERE $__timeFilter(timestamp) GROUP BY bucket ORDER BY bucket;"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 15,
            "showPoints": "auto"
          }
        }
      },
      "options": {
        "legend": { "displayMode": "hidden" },
        "tooltip": { "mode": "single" }
      }
    }
  ]
}
